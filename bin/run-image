#!/bin/bash

set -ex

find . | grep -E "(__pycache__|\.pyc|\.pyo$)" | xargs rm -rf

# Import variables from .env file if one exists
if [ -f .env ]; then
  docker run --rm -it -v $(pwd):/home --env-file=.env sds/trajectory-subsetter "$@"
else
  docker run --rm -it -v $(pwd):/home sds/trajectory-subsetter "$@"
fi
